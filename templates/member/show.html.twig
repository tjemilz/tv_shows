{% extends 'base.html.twig' %}

{% block title %}Member{% endblock %}

{% block body %}
    <h1>Member</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ member.email }}</td>
            </tr>
            <tr>
                <th>Online Catalog</th>
                <td><a href="{{ path('onlinecatalog_show', {'id' : member.catalog.id}) }}"> My Online Catalog </a></td>
            </tr>
            <tr>
                <th>Best Ones</th>
                {% for bestone in member.bestones %}
                <td><a href="{{ path('app_best_ones_show', {'id' : bestone.id}) }}"> {{bestone.description}} </a></td>
                {% endfor %}
                <td><a href="{{ path('app_best_ones_new', {'id' : member.id}) }}">Create new</a></td>
            </tr>
               


                        
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_member') }}" class="btn btn-primary">back to members</a>                         
    {% else %}
        <a href="{{ path('app_best_ones_index') }}" class="btn btn-primary">back to home</a>
    {% endif %}

{% endblock %}
