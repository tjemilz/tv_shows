{% extends 'base.html.twig' %}

{% block title %}TvShow{% endblock %}

{% block body %}
    <h1>TvShow</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tv_show.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tv_show.name }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ tv_show.year }}</td>
            </tr>
            <tr>
                <th>Director</th>
                <td>{{ tv_show.director }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ tv_show.note }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ vich_uploader_asset(tv_show, 'imageFile') }}"/></td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_tv_show_index') }}">back to list</a>

    <a class="btn btn-secondary" href="{{ path('app_tv_show_edit', {'id': tv_show.id}) }}">edit</a>

    {{ include('tv_show/_delete_form.html.twig') }}
{% endblock %}
